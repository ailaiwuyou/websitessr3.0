{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/shims-vue.d.ts",
        "main.ts",
        "shims.d.ts",
        "types/shims-vue.d.ts",
        "types/shims-vue.d.ts"
    ]
}
